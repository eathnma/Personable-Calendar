<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

        <!-- this is the collapsed layout -->
        <RelativeLayout
            android:id="@+id/parentContainer"
            android:layout_width="wrap_content"
            android:layout_height="590px"
            android:layout_marginTop="300dp"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            >

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:minHeight="350px"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="215px"
                    android:background="@drawable/textbox"

                    android:paddingVertical="20dp"
                    android:paddingLeft="20dp"
                    android:layout_alignParentBottom="true"

                    android:paddingRight="85dp"
                    android:text="TESTING TESTING TESTING TESTING TESTING"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />

                    <ImageView
                        android:id="@+id/SonNguyenQuang"
                        android:layout_width="431px"
                        android:layout_height="590px"
                        android:maxWidth="2000px"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                         />

        </RelativeLayout>
</RelativeLayout>