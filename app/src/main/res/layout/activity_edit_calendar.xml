<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCalendar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="40dp">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:rowCount="2">

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/arrow" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circular_book"
                    android:text="Save"
                    android:textSize="12sp"
                    app:layout_column="2"
                    app:layout_row="0" />

            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="77dp"
                app:layout_column="0"
                app:layout_row="1">

                <EditText
                    android:id="@+id/addTitle"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/circular_book"
                    android:inputType="textPersonName"
                    android:paddingLeft="50dp"
                    android:text="Add Title" />

            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                app:layout_column="0"
                app:layout_row="2">


                <TextView
                    android:id="@+id/editDateRowOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circular_medium"
                    android:text="Feb 28th, 2020"
                    app:layout_column="0"
                    app:layout_gravity="center_vertical"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/editTimeRowOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circular_book"
                    android:text="7:30 PM"
                    app:layout_column="2"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/editDateRowTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circular_medium"
                    android:text="Feb 28th, 2020"
                    app:layout_column="0"
                    app:layout_gravity="center_vertical"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/editTimeRowTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circular_book"
                    android:text="8:30 PM"
                    app:layout_column="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="1" />
            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="138dp"
                app:layout_column="0"
                app:layout_row="3">

                <EditText
                    android:id="@+id/notificationMessage"
                    android:layout_width="299dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/rounded_edit_text"
                    android:ems="10"
                    android:fontFamily="@font/circular_book"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:padding="15dp"
                    android:text="Write Notification Message..."
                    android:textSize="14sp"
                    app:layout_column="0"
                    app:layout_row="0">

                    <requestFocus />
                </EditText>
            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginTop="20dp"
                app:layout_column="0"
                app:layout_row="4">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circular_book"
                    android:text="Add Location"
                    android:textSize="13sp"
                    app:layout_column="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="0" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="18dp"
                    android:layout_height="25dp"
                    android:layout_margin="16dp"
                    app:layout_column="0"
                    app:layout_gravity="center_vertical"
                    app:layout_row="0"
                    app:srcCompat="@drawable/location_icon" />

            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:layout_column="0"
                app:layout_row="5">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:fontFamily="@font/circular_book"
                    android:text="Choose Colour"
                    android:textSize="13sp" />
            </androidx.gridlayout.widget.GridLayout>

        </androidx.gridlayout.widget.GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>