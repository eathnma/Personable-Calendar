<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserSettings">

    <!-- PARENT CONTAINER !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >

        <!-- User Settings -->
            <TextView
                android:id="@+id/title"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fontFamily="@font/circular_bold"
                android:text="User Settings"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp"
                android:textSize="30sp"
                >
            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fontFamily="@font/circular_bold"
                android:text="Name"
                android:layout_marginLeft="50dp"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                >
            </TextView>

            <EditText
                android:id="@+id/addName"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:hint="Add Name"
                android:background="#f4f4f4"
                android:ems="10"
                android:fontFamily="@font/circular_book"
                android:inputType="textPersonName"
                android:layout_marginLeft="40dp"
                android:paddingLeft="10dp"
                android:layout_marginRight="40dp"
                android:textCursorDrawable="@drawable/black_cursor"
                android:layout_marginBottom="20dp"

                />
            <requestFocus />

            <!-- Set Birthday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:onClick="setBirthday"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:fontFamily="@font/circular_bold"
                    android:textSize="20sp"
                    android:text="Birthday"
                    />

                <ImageView
                    android:id="@+id/birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_cake" />
            </LinearLayout>

        <!-- Set Profile Picture -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginVertical="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circular_bold"
                android:textSize="20sp"
                android:text="Profile Picture"
                android:layout_marginBottom="10dp"
                />
            <ImageView
                android:id="@+id/picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Upload picture"
                />
        </LinearLayout>

        <!-- Set favourite Color -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circular_bold"
                android:text="Preferred Color"
                android:textSize="20sp"
                android:paddingVertical="10dp"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/blueCircle"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:contentDescription="#3a6ae8"
                        android:padding="1dp"
                        android:background="@drawable/blue_circle"
                        app:layout_column="0"
                        app:layout_row="0"
                        android:onClick="getColor"
                        />

                    <ImageView
                        android:id="@+id/redCircle"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="25dp"
                        android:contentDescription="#ff6263"
                        android:padding="1dp"
                        android:background="@drawable/red_circle"
                        app:layout_column="1"
                        app:layout_row="0"
                        android:onClick="getColor"
                        />

                    <ImageView
                        android:id="@+id/yellowCircle"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="25dp"
                        android:contentDescription="#edbe2f"
                        android:padding="1dp"
                        android:background="@drawable/yellow_circle"
                        app:layout_column="2"
                        app:layout_row="0"
                        android:onClick="getColor"
                        />

                    <ImageView
                        android:id="@+id/lightBlueCircle"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="25dp"
                        android:contentDescription="#46baed"
                        android:padding="1dp"
                        android:background="@drawable/light_blue_circle"
                        app:layout_column="3"
                        app:layout_row="0"
                        android:onClick="getColor"
                        />

                    <ImageView
                        android:id="@+id/orangeCircle"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="25dp"
                        android:contentDescription="#fa7c19"
                        android:background="@drawable/orange_circle"
                        app:layout_column="4"
                        app:layout_row="0"
                        android:onClick="getColor"
                        />

                    <ImageView
                        android:id="@+id/greenCircle"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="25dp"
                        android:contentDescription="#1bcdbf"
                        android:padding="1dp"
                        android:background="@drawable/green_circle"
                        app:layout_column="5"
                        app:layout_row="0"
                        android:onClick="getColor"
                        />
                </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="50dp"
            android:fontFamily="@font/circular_book"
            android:textColor="#f4f4f4"
            android:textSize="20sp"
            android:text="Save"
            android:onClick="saved"
            />
    </LinearLayout>

</LinearLayout>